######################################################
### CSS and JAVASCRIPTS
######################################################
#set ($discard = $xwiki.jsx.use('XWiki.Notifications.Code.XWikiUserNotificationsSheet'))
#set ($discard = $xwiki.ssx.use('XWiki.Notifications.Code.XWikiUserNotificationsSheet'))
## TODO: replace by $xwiki.sswx.use() or something like this when XWIKI-12788 is closed.
#set ($discard = $xwiki.linkx.use($services.webjars.url('bootstrap-switch', 'css/bootstrap3/bootstrap-switch.min.css'), {'type': 'text/css', 'rel': 'stylesheet'}))
######################################################
### TITLE
######################################################
= $services.localization.render('notifications.settings.title') =
######################################################
### EMAIL PREFERENCES
######################################################
#if ($services.notification.areEmailsEnabled())
(% class="profile-section highlighted-profile-section notification-top-panel column half" %)
(((
  = {{translation key="notifications.settings.email.title" /}} =
  {{notificationsEmailPreferences /}}
)))
#end
######################################################
### AUTOWATCH PREFERENCES
######################################################
#if ($services.notification.watch.isEnabled())
(% class="profile-section highlighted-profile-section notification-top-panel column half" %)
(((
{{html clean="false"}}
&lt;h1>$escapetool.xml($services.localization.render('notifications.settings.watch.title'))&lt;/h1>
&lt;div class="notification-top-panel-preferences">
  &lt;div class="xform">
    &lt;dl>
      &lt;dt class="label">&lt;label>$escapetool.xml($services.localization.render('notifications.settings.watch.autowatchmode'))&lt;span id="icon-help-autowatchmode" class="notification-icon icon icon-help">&lt;/span>
         &lt;div class="icon-hint-info icon-info-autowatchmode" >
            &lt;div class="arrow">&lt;/div>
           &lt;div class="icon-info-content ">$services.localization.render('notifications.settings.watch.autowatchmode.help.hint')&lt;/div>
         &lt;/div>
      &lt;/label>
      &lt;p class="xHint">$escapetool.xml($services.localization.render('notifications.settings.watch.autowatchmode.hint'))&lt;/p>
      &lt;/dt>
      &lt;dd>
        #set ($mode = $services.notification.watch.automaticWatchMode)
        &lt;select class="notificationAutoWatchMode">
          &lt;option value="NONE" #if($mode == 'NONE')selected="selected"#end>$escapetool.xml($services.localization.render('XWiki.Notifications.Code.AutomaticWatchModeClass_automaticWatchMode_NONE'))&lt;/option>
          &lt;option value="ALL"  #if($mode == 'ALL')selected="selected"#end>$escapetool.xml($services.localization.render('XWiki.Notifications.Code.AutomaticWatchModeClass_automaticWatchMode_ALL'))&lt;/option>
          &lt;option value="MAJOR" #if($mode == 'MAJOR')selected="selected"#end>$escapetool.xml($services.localization.render('XWiki.Notifications.Code.AutomaticWatchModeClass_automaticWatchMode_MAJOR'))&lt;/option>
          &lt;option value="NEW" #if($mode == 'NEW')selected="selected"#end>$escapetool.xml($services.localization.render('XWiki.Notifications.Code.AutomaticWatchModeClass_automaticWatchMode_NEW'))&lt;/option>
        &lt;/select>
      &lt;/dd>
    &lt;/dl>
  &lt;/div>
&lt;/div>
{{/html}}
)))
#end
######################################################
### APPLICATIONS
######################################################
(% class="profile-section highlighted-profile-section column full" %)
(((
  = {{translation key="notifications.settings.applications.title" /}} =
  {{notificationsApplicationsPreferences /}}
)))
######################################################
### FILTERS
######################################################
(% class="profile-section highlighted-profile-section column full" %)
(((
  = {{translation key="notifications.settings.filters.preferences.title" /}} =
  {{notificationsFiltersPreferences /}}
)))
{{/velocity}}</content>
