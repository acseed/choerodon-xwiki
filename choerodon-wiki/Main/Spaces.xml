##
## List spaces within the wiki.
##
$xwiki.ssx.use('Main.Spaces')##
#set($spaceList = $services.query.xwql('select distinct doc.space from Document doc order by doc.space').addFilter('hidden').execute())
{{html}}
&lt;ul class="xlist">
  ##
  ## List spaces.
  ##
  #foreach($space in $spaceList)
    ## Display space only if the user has view right on space home and if the space is not blacklisted.
    ## $blacklistedSpaces is set in xwikivars.vm
    #set ($spaceHomeDocumentReference = $services.model.resolveSpace($space))
    #if($xwiki.hasAccessLevel('view', $services.model.serialize($spaceHomeDocumentReference)) &amp;&amp; !$blacklistedSpaces.contains($space))
      &lt;li class="xitem xunderline xhighlight space">
        &lt;div class="xitemcontainer">
          &lt;div class="spSpaceName">&lt;a href="$xwiki.getURL($spaceHomeDocumentReference)">${escapetool.xml($space)}&lt;/a>&lt;/div>
          &lt;div class="xshowonhover spSpaceActions">
            ## Link to the space index.
            &lt;a href="$xwiki.getURL('Main.SpaceIndex', 'view', "space=$escapetool.url($space)")" title="$services.localization.render('index.spacesMacro.spaceIndex.title')">
              &lt;img src="$xwiki.getSkinFile('icons/silk/book_open.png')" alt="$services.localization.render('index.spacesMacro.spaceIndex.alt')"/>
            &lt;/a>
            ## If the user has admin right on the space display links to administration and delete.
            #set ($spacePreferencesDocumentReference = $services.model.createEntityReference('WebPreferences', 'DOCUMENT', $spaceHomeDocumentReference))
            #if($xwiki.hasAccessLevel('admin', $services.model.serialize($spacePreferencesDocumentReference)))
              &lt;a href="$xwiki.getURL($spacePreferencesDocumentReference, 'admin', '')" title="$services.localization.render('index.spacesMacro.spaceAdministration.title')">
                &lt;img src="$xwiki.getSkinFile('icons/silk/wrench.png')" alt="$services.localization.render('index.spacesMacro.spaceAdministration.alt')"/>
              &lt;/a>
            #end
          &lt;/div>
          &lt;div class="xspacer">&amp;nbsp;&lt;/div>
        &lt;/div>
      &lt;/li>
    #end
  #end
  ##
  ## Space creation.
  ##
  ## Only if the current user has the right to create spaces and the current action is not inline.
  ## If it's inline, then there is already a form, and if we render the second, nested one, the DOM is messed up in IE.
  #if($hasCreateSpace &amp;&amp; "$!xcontext.action" != "inline" &amp;&amp; "$!xcontext.action" != "edit")
    &lt;li id="spSpaceCreateItem" class="xitem space">
      &lt;div class="xitemcontainer">
        &lt;div id="spSpaceCreateLabel" class="spSpaceName">&lt;a href="$xwiki.getURL('XWiki.CreatePage', 'view', 'tocreate=space')" onclick="toggleClass($('spSpaceCreateForm'), 'hidden'); return false;">$services.localization.render('index.spacesMacro.createSpace.link')&lt;/a>&lt;/div>
        &lt;div class="spacer">&amp;nbsp;&lt;/div>
        &lt;div id="spSpaceCreateForm" class="hidden">
          &lt;form method="post" action="$doc.getURL('create')" class="xformInline">
            &lt;div>
              &lt;input name="tocreate" type="hidden" value="space" />
              #set($newSpaceName = $escapetool.xml($services.localization.render('index.spacesMacro.createSpace.defaultSpaceName')))
              &lt;label class="hidden" for="spSpaceCreateTextInput">$newSpaceName&lt;/label>
              &lt;input id="spSpaceCreateTextInput" type="text" name="space" value="$newSpaceName" class="panelinput withTip" />
              &lt;span class="buttonwrapper">
                &lt;input type="submit" value="$services.localization.render('index.spacesMacro.createSpace.submit')" class="button" />
              &lt;/span>
            &lt;/div>
          &lt;/form>
        &lt;/div>
        &lt;div class="spacer">&amp;nbsp;&lt;/div>
      &lt;/div>
    &lt;/li>
  #end
&lt;/ul>
{{/html}}
{{/velocity}}
</code>
